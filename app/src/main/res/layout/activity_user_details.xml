<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    tools:context=".UserDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:padding="20dp">

        <!-- Upload Picture Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Profile Picture"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/round_image"
            android:layout_gravity="center"
            android:contentDescription="Profile Picture" />

        <Button
            android:id="@+id/btnUploadPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Picture"
            android:backgroundTint="@color/textTabLight"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <!-- User Input Fields -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lavender_border"
            android:hint="Enter your Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Phone Number"
            android:inputType="phone"
            android:background="@drawable/lavender_border"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etCounty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your County"
            android:inputType="text"
            android:background="@drawable/lavender_border"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Newly Added Constituency or Sub-County Field -->
        <EditText
            android:id="@+id/etSubCounty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Sub-County"
            android:inputType="text"
            android:background="@drawable/lavender_border"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Login as: Farmer or Buyer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="#000" />

        <RadioGroup
            android:id="@+id/loginTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rbFarmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer"
                android:textColor="#000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbBuyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer"
                android:textColor="#000"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Registration"
            android:backgroundTint="@color/textTabLight"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>
