<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    android:elevation="4dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Product Image with Cart Icon Overlay -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/product_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Product Image"
                android:layout_marginBottom="8dp"/>

            <!-- Cart Icon (Top Right) -->
            <ImageView
                android:id="@+id/btn_add_to_cart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:padding="8dp"/>
        </RelativeLayout>

        <!-- Product Name -->
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="4dp"/>

        <!-- Price Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvPricePerUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KES 0.00 per unit"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: KES 0.00"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Quantity and Stock Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/qty_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Qty: 1 Kg"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/stock_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Stock"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="6dp"/>
        </LinearLayout>

        <!-- Seller Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: Not Available"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="4dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Location: Nairobi, Westlands"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
